{
  "name": "lob",
  "version": "0.3.0",
  "description": "Demonstrating realtime connection between web browsers. Powered by ably.io",
  "main": "index.js",
  "scripts": {
    "test": "npm run -s test:bundle && npm run -s test:run",
    "test:watch": "chokidar '**/*.js' -i '**/bundle.js' -c 'npm -s test'",
    "test:bundle": "rollup -c rollup.test.config.js",
    "test:run": "karma start",
    "build": "npm run -s build:scripts && npm run -s build:styles",
    "build:styles": "node-sass assets/styles/lob.scss > public/lob.css",
    "build:scripts": "rollup -c",
    "fetch": "npm run fetch:scut -s",
    "fetch:scut": "curl https://raw.githubusercontent.com/davidtheclark/scut/master/dist/_scut.scss > ./assets/styles/vendor/_scut.scss"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/CrowdHailer/lob.git"
  },
  "keywords": [
    "realtime",
    "device-api",
    "hardware"
  ],
  "author": "Peter Saxton",
  "license": "Ask for details",
  "bugs": {
    "url": "https://github.com/CrowdHailer/lob/issues"
  },
  "devDependencies": {
    "chokidar-cli": "~1.1.1",
    "jasmine": "~2.3.2",
    "jasmine-core": "~2.3.4",
    "karma": "~0.13.15",
    "karma-jasmine": "~0.3.6",
    "karma-notify-reporter": "~0.1.1",
    "karma-phantomjs-launcher": "~0.2.1",
    "node-sass": "~3.4.2",
    "phantomjs": "~1.9.18",
    "rollup": "~0.20.5",
    "rollup-plugin-typescript": "^0.2.1"
  }
}
