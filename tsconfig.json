{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "assets/scripts/action-dispatcher.ts",
        "assets/scripts/action.ts",
        "assets/scripts/avionics-interface.ts",
        "assets/scripts/boot.ts",
        "assets/scripts/data-logger-display.ts",
        "assets/scripts/data-logger.ts",
        "assets/scripts/dispatcher.ts",
        "assets/scripts/dom.ts",
        "assets/scripts/readings.ts",
        "assets/scripts/uplink.ts",
        "assets/scripts/utils.ts",
        "test/action-test.ts",
        "test/data-logger-test.ts",
        "test/dispatcher-test.ts",
        "test/jasmine.d.ts",
        "test/lob-test.ts",
        "test/readings-test.ts",
        "test/streak-test.ts",
        "test/support.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
