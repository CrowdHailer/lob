{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "compileOnSave": false,
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "assets/scripts/accelerometer.ts",
        "assets/scripts/action.ts",
        "assets/scripts/avionics/component.ts",
        "assets/scripts/avionics/display.ts",
        "assets/scripts/avionics/interface.ts",
        "assets/scripts/avionics/presenter.ts",
        "assets/scripts/boot.ts",
        "assets/scripts/dispatcher.ts",
        "assets/scripts/dom.ts",
        "assets/scripts/logger.ts",
        "assets/scripts/notice/component.ts",
        "assets/scripts/notice/controller.ts",
        "assets/scripts/notice/view.ts",
        "assets/scripts/state.ts",
        "assets/scripts/store.ts",
        "assets/scripts/uplink.ts",
        "assets/scripts/utils.ts",
        "client/actions.ts",
        "client/boot.ts",
        "client/connection.ts",
        "client/store.ts",
        "test/action-test.ts",
        "test/avionics-presenter-test.ts",
        "test/dispatcher-test.ts",
        "test/jasmine.d.ts",
        "test/lob-test.ts",
        "test/state-test.ts",
        "typings/object-assign/object-assign.d.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
